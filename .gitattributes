* text=auto

# Shell scripts should be LF for macOS/Linux
*.sh text eol=lf

# Python + common config/doc files: keep LF to avoid cross-platform churn
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# PowerShell: keep CRLF for native Windows editing
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf
